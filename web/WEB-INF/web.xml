<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>/index</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>init</servlet-name>
        <servlet-class>com.longder.shoppingcart.web.InitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>init</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>toBuy</servlet-name>
        <servlet-class>com.longder.shoppingcart.web.BuyFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>toBuy</servlet-name>
        <url-pattern>/toBuy</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>com.longder.shoppingcart.web.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showCart</servlet-name>
        <servlet-class>com.longder.shoppingcart.web.ShowCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showCart</servlet-name>
        <url-pattern>/showCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>remove</servlet-name>
        <servlet-class>com.longder.shoppingcart.web.RemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>remove</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>

</web-app>